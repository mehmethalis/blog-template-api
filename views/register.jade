block content
 .container
   h1 Registration
   form(role='form', action='/register', method='post')
    .form-group
       input.form-control(type='text', id='name', name='name', placeholder='enter a name')
   
    &nbsp;
    .form-group
       input.form-control(type='text', id='surname', name='surname', placeholder='enter a surname')
    
    &nbsp;
    .form-group
       input.form-control(type='text', id='username', name='username', placeholder='enter a user name')
    
    &nbsp;
    .form-group
       input.form-control(type='text', id='email', name='email', placeholder='enter a email')
    
    &nbsp;
